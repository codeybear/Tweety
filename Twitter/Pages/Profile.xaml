<Window x:Class="Pages.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="298" Width="305" ResizeMode="NoResize">
    <Grid>
        <Image HorizontalAlignment="Left" Margin="12,12,0,0" Name="ImageProfile" Stretch="Fill" Width="72" DataContext="{Binding}" Height="72" VerticalAlignment="Top" />
        <TextBox Margin="12,0,12,12" Name="txtProfile" TextWrapping="WrapWithOverflow" BorderThickness="0" Height="102" VerticalAlignment="Bottom" />
        <TextBox Margin="12,0,12,122" Name="txtScreenName" Height="Auto" VerticalAlignment="Bottom" BorderThickness="0" FontSize="18" />
        <TextBox Height="Auto" Margin="12,89,12,0" Name="txtName" VerticalAlignment="Top" BorderThickness="0" FontSize="18" />
    </Grid>
</Window>
