<Window x:Class="Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings" Height="551" Width="576" Background="White" WindowStartupLocation="CenterScreen" FocusManager.FocusedElement="{Binding ElementName=txtUserName}" ResizeMode="NoResize">
    <Canvas Height="auto" Name="CanvasMain" Width="auto">
        <Button Canvas.Left="438" Canvas.Top="492" Height="23" Name="btnOk" Width="62" Background="OrangeRed" Click="btnOk_Click" Content="Ok" TabIndex="2" IsDefault="True"></Button>
        <Button Canvas.Left="504" Canvas.Top="492" Height="23" Name="btnCancel" Width="58" Background="LightSkyBlue" Click="btnCancel_Click" Content="Cancel" TabIndex="3" IsCancel="True"></Button>
        <WebBrowser x:Name="WebBrowser" Height="476" Canvas.Left="8" Canvas.Top="8" Width="554"/>
        <TextBox x:Name="txtUpdate" Canvas.Left="8" TextWrapping="Wrap" Canvas.Top="493.04" Width="95.553" Background="{x:Null}"/>
    </Canvas>
</Window>
