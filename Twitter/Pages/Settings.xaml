<Window x:Class="Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings" Height="113" Width="223" Background="White" WindowStyle="None" WindowStartupLocation="CenterScreen" FocusManager.FocusedElement="{Binding ElementName=txtUserName}">
    <Canvas Height="auto" Name="CanvasMain" Width="auto">
        <Label Canvas.Left="4" Canvas.Top="10" Height="28" Name="lblUserName" Width="75" FontSize="12">UserName</Label>
        <Label Canvas.Left="4" Canvas.Top="38" Height="28" Name="lblPassword" Width="75" FontSize="12">Password</Label>
        <TextBox Canvas.Left="78" Canvas.Top="10" Height="23" Name="txtUserName" Width="126" TabIndex="0" />
        <Button Canvas.Left="79" Canvas.Top="71" Height="23" Name="btnOk" Width="62" Background="OrangeRed" Click="btnOk_Click" Content="Ok" TabIndex="2" IsDefault="True"></Button>
        <Button Canvas.Left="146" Canvas.Top="71" Height="23" Name="btnCancel" Width="58" Background="LightSkyBlue" Click="btnCancel_Click" Content="Cancel" TabIndex="3" IsCancel="True"></Button>
        <PasswordBox Canvas.Left="78" Canvas.Top="38" Height="23" Name="PasswordBox" Width="126" TabIndex="1" />
    </Canvas>
</Window>
